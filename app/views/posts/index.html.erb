<h1>Posts</h1>

<p>
  <%= link_to "Add New", new_post_path %>
</p>

<table>
  <thead>
  <tr>
    <th>Post Title</th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post.id) %></td>
        <td>[<%= link_to 'edit', edit_post_path(post) %>]</td>
        <td>[<%= link_to 'delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>]</td>

      </tr>
  <% end %>
  </tbody>
</table>

<hr>
<%= paginate @posts %>