<h1>
  <%= @post.title %>
</h1>

<p>
  posted by: <%= @post.user.username %>
</p>


<p>
  <%# @category_name %>
      <strong>Category: </strong> <%= @post.category ? @post.category.name : "のーかてごり" %><br>
</p>

<p>
  <strong>Content:</strong><br>
  <%= @post.content %>
</p>

<p>
  <strong>Picture:</strong>
  <%= image_tag(@post.picture_url) if @post.picture.present? %>
</p>

<p>
  [<%= link_to 'edit', edit_post_path %>]
<p>
  [<%= link_to 'delete', post_path , method: :delete, data: { confirm: 'Are you sure?' } %>]
</p>
</p>
