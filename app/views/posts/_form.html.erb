<%= form_for(@post, :html => {:class => "form-horizontal", :role=>"form"}) do |f| %>

    <div class="form-group">
      <%= f.label :title, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
      <%= f.text_field :title %>
      <% if @post.errors.any? %>
          <%= @post.errors.messages[:title][0] %>
      <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :category_id, class: 'col-sm-2 control-label' %><br>
      <div class="col-sm-10">
      <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: true %><br>
        <%= link_to 'create new category', new_category_path %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :content, class: 'col-sm-2 control-label' %><br>
      <div class="col-sm-10">
      <%= f.text_area :content %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :picture, class: 'col-sm-2 control-label' %><br>
      <div class="col-sm-10">
        <%= f.file_field :picture %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Post', class: 'btn btn-default' %>
      </div>
    </div>

<% end %>